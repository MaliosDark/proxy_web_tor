<!-- redirect.js-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redireccionando...</title>
    <!-- Enlace a Bootstrap CSS en modo oscuro -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            background-color: #343a40; /* Color de fondo oscuro */
            color: #ffffff; /* Texto blanco */
        }
        .centered-loading {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
    </style>
</head>
<body>
    <div class="centered-loading">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Redirigiendo...</span>
        </div>
    </div>
    <script>
        // Realizar una solicitud AJAX para obtener el contenido del proxy y mostrarlo en la página
        fetch('/proxy/render?url=<%= url %>')
            .then(response => response.text())
            .then(body => {
                document.body.innerHTML = body;
            })
            .catch(error => {
                console.error('Error al cargar la página:', error);
                document.body.innerHTML = '<h1>Error al cargar la página</h1>';
            });
    </script>
</body>
</html>
